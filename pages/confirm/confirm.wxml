<!--coaches-detail.wxml-->
<view class="container">
  <view class="coach-dest">
    <view class="coach">
      <image class="item-coach" data-id="{{coach.id}}" src="/images/pdf.png" />
      <view class="zan-font-12-bold">{{roomData.roomName}}</view>
    </view>
    <text class="zan-font-10"></text>
  </view>
  <view class="zan-cell">
      <view class="zan-cell__bd">{{date}}</view>
    </view>
  <view class="main-list">

    <view class="main-list-item" wx:for="{{roomData.roomTime}}" wx:key="xh" wx:for-item="time">
      <text class="state-time-text">{{time.timeName}}</text>
      <image class="state-time-image" wx:if="{{time.timeStatus == 2}}" src="/images/available.png"></image>
      <image class="state-time-image" wx:if="{{time.timeStatus == 1 || time.timeStatus == 3}}" src="/images/occupied.png">
      </image>
      <!-- <text class="state-time">{{time.timeStatus}}</text> -->
    </view>
  </view>
  <view class="zan-panel">

    <!-- <view class="type-container">
            <scroll-view class="type-navbar" scroll-x="true" style="width: 100%">
                <view class="type-box" wx:for-items="{{date}}">
                    <view id="{{item.id}}" class="type-navbar-item {{activedateid == item.id ? 'type-item-on' : ''}}" bindtap="tabClick">
                        {{item.datestr}}
                    </view>
                </view>
            </scroll-view>
        </view> -->
    <view class="row-wrap">
      开始时间：
      <picker bindchange="bindPickerstartTimeChange" range="{{startTime}}">
        <view class="picker {{selstartTime=='请选择'?'hui':''}}">
          {{selstartTime}}
        </view>
      </picker>
    </view>
    <view class="row-wrap">
      结束时间：
      <picker bindchange="bindPickerendTimeChange" bindtap="PickerendTimeTap" range="{{endTime}}">
        <view class="picker {{selendTime=='请选择'?'hui':''}}">
          {{selendTime}}
        </view>
      </picker>
    </view>
    <view class="row-wrap">
      参与者学号：
      <input class="row-wrap-input" type="number" cursor-spacing="30" id="userid" maxlength="8"
        placeholder="{{userid_holder}}" bindinput="useridInput" bindfocus="inputFocus" bindblur="inputBlur" />
    </view>
  </view>
  <view class="appointBtn border-radius pink-bg" bindtap="appointtap">立即预约</view>
</view>
<modal title="预定确认" hidden="{{modalHidden}}" bindconfirm="modalHide" bindcancel="modalHideCancle">
  <view class="zan-font-15">
    <text>{{modalContent}}</text>
  </view>
</modal>